<!-- Load Tailwind Play CDN-->
<%= javascript_include_tag 'https://cdn.tailwindcss.com' %>
<script>
tailwind.config = {
    theme: {
      extend: {
        colors: {
          clifford: '#eecccc'
        },
        keyframes: {
          wiggle: {
            '0%, 100%': { transform: 'rotate(-10deg)' },
            '50%': { transform: 'rotate(10deg)' }
          }
        },
        animation: {
          wiggle: 'wiggle .5s ease-in-out infinite'
        }
      }
    }
  }
</script>

