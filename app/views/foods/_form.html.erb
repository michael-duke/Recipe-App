<%= form_with model: food, url: user_foods_path, class: 'flex flex-col items-center w-6/12 mx-auto' do |form| %>
  <% if food.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(food.errors.count, "error") %> prohibited this food from being saved:</h2>

      <ul>
        <% food.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-group input-group-outline mb-3">
    <label class="form-label">Name</label>
    <%= form.text_field :name, class: 'form-control focus:border-blue-600' %>
  </div>

  <div class="input-group input-group-outline mb-3">
    <label class="form-label">Measurement Unit</label>
    <%= form.text_field :measurement_unit, class: 'form-control focus:border-blue-600' %>
  </div>

  <div class="input-group input-group-outline mb-3">
    <label class="form-label">Unit Price</label>
    <%= form.number_field :price, class: 'form-control focus:border-blue-600' %>
  </div>

  <div class="input-group input-group-outline mb-4">
    <label class="form-label">Quantity</label>
    <%= form.number_field :quantity, class: 'form-control focus:border-blue-600' %>
  </div>

  <%= form.button "Create Food", type: "submit", class: "button button-blue bg-blue-300", 'data-ripple-light': true %>

<% end %>
