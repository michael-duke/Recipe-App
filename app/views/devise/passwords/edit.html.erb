<h2>Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'flex flex-col mx-auto w-[45%]' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "New password" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control mb-3' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirm new password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control mb-3' %>
  </div>

 <%= f.button "Change password", type: "submit", class: "self-start w-[80%] mt-3 button button-gradient text-sm text-white bg-slate-500 border hover:text-slate-500 hover:border-slate-500 hover:bg-transparent" %>

  <div class="mt-4">
    <%= render "devise/shared/links" %>
  </div>
<% end %>

