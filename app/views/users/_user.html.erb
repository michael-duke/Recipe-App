<%= link_to user_path(user) do %>
  <li class="user mt-4 flex items-center gap-10">
    <div class="user-info w-10/12 border border-red flex justify-between p-4 items-center">
      <h3 class="username text-2xl ml-2"><%= user.name %></h3>
      <div class="flex flex-col self-end">
        <span class="mr-2">Number of Foods: <%= user.foods.count %></span>
        <span class="mr-2">Number of Recipes: <%= user.recipes.count %></span>
      </div>
    </div>
  </li>
<% end %>