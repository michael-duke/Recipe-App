<%= form_with model: @recipe_food, url: user_recipe_recipe_foods_path, class: 'flex flex-col items-center w-6/12 mx-auto' do |form| %>
  <% if @recipe_food.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@recipe_food.errors.count, "error") %> prohibited this recipe_food from being saved:</h2>

      <ul>
        <% @recipe_food.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-group input-group-outline mb-3">
    <label class="form-label">Quantity</label>
    <%= form.number_field :quantity, class: 'form-control focus:border-blue-600' %>
  </div>

  <span class="self-start text-sm mt-2 text-gray-500">*Click to dropdown</span>
  
  <div class="input-group input-group-outline mb-3">
    <%= form.select :food_id, @user.foods.order(name: :asc).map { |f| [f.name, f.id]}, {}, class: "form-control px-4 " %>
  </div>

 <%= form.button "Add Ingredient", type: "submit", class: "button mb-5 button-green bg-emerald-300", 'data-ripple-light': true %>
<% end %>
