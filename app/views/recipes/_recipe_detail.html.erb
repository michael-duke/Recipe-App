<h1 class="text-center text-2xl font-bold underline decoration-purple-500 underline-offset-4"> <%= recipe.name %></h1>
<div class="w-10/12 mx-auto mb-4 flex justify-between">
  <div class ="flex flex-col">
    <h2 class="text-xl font-semibold mb-4">Preparation Time: <%= recipe.preparation_time %></h2>
    <h2 class=" text-xl font-semibold mb-4">Cooking Time: <%= recipe.cooking_time %></h2>
    <p><%= recipe.description %></p>
  </div>

  <label class="mt-3 inline-flex items-center">
    <input
      type="checkbox"
      class="checkbox absolute z-10 cursor-pointer opacity-0"
      <% if recipe.public %>
      checked='checked'
      <% end %>
    />
    <div class="form-check-input"></div>
    <span class="text-gray-700 cursor-pointer select-none">Public</span>
</label>
</div>