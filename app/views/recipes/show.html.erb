<p style="color: green"><%= notice %></p>

<%= render @recipe %>

<%= link_to "Generate List", user_recipe_general_shopping_list_index_path(@user, @recipe), class: '' %>
<%= link_to "Add ingredient", new_user_recipe_recipe_food_path(@user, @recipe), class: '' %>
<div class="flex flex-col">
  <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 inline-block min-w-full sm:px-6 lg:px-8">
      <div class="overflow-hidden">
        <table class="min-w-full">
          <thead class="bg-gray-800 border-b">
            <tr class="">
              <th scope="col" class="text-sm font-medium text-white px-6 py-4 text-left">
                Food
              </th>
              <th scope="col" class="text-sm font-medium text-white px-6 py-4 text-left">
                Quantity
              </th>
              <th scope="col" class="text-sm font-medium text-white px-6 py-4 text-left">
                Value
              </th>
              <th colspan="3" class="text-sm font-medium text-white px-6 py-4 text-left">
               Actions
              </th>
            </tr>
          </thead>
          <tbody>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<div>
  <%= link_to "Back to recipes", user_recipes_path %>

  <%= button_to "Destroy this recipe", user_recipe_path(@user,@recipe), method: :delete %>
